#step 1
num = input('')
num2 = num[-1]
num3 = num[:-1]
print(num2)
print(num3)
#step 2
t = (num3[::-1])
print(t)
total = 0
total2 = 0
#step 3
even = num[::2]
odd = num[1::2]
for i in t:
    for i in range(0,len(even)):
        if num.isdigit:
            total = total + i
print(total)

for i in t:
    for i in range(0,len(odd)):
        if num.isdigit:
            total2 = total2 + i
print(total2)
